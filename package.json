{
  "name": "gmdss-decoder",
  "version": "1.0.0",
  "description": "Decoder for GMDSS meteorological data",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && if not exist dist\\i18n mkdir dist\\i18n && copy src\\i18n\\ru.json dist\\i18n\\ru.json",
    "build:linux": "tsc && mkdir -p dist/i18n && cp src/i18n/ru.json dist/i18n/ru.json",
    "start": "node dist/main.js",
    "test": "jest"
  },
  "dependencies": {
    "i18n": "^0.15.1"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.5.9",
    "@types/i18n": "^0.13.6",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"
  }
}